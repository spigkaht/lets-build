<% content_for :title, "Houses" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Houses</h1>
    <%= link_to "New house", new_house_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <div id="houses" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @houses.any? %>
      <table class="min-w-full divide-y divide-gray-200 mb-5 border-separate border-spacing-4">
          <colgroup>
            <col class="w-[12%]">
            <col class="w-[12%]">
            <col class="w-[12%]">
            <col class="w-[12%]">
            <col class="w-[6%]">
            <col class="w-[6%]">
            <col class="w-[6%]">
            <col class="w-[6%]">
            <col class="w-[6%]">
            <col class="w-[6%]">
            <col class="w-[5%]">
          </colgroup>
        <thead class="p-4">
          <tr class="text-left">
            <th title="Total area">
              <div class="flex">
                <%= icon "building-house", class: ["size-8"] %>
                <%= icon "move" %>
              </div>
            </th>
            <th title="House area">
              <div class="flex">
                <%= icon "home", class: ["size-8"] %>
                <%= icon "move" %>
              </div>
            </th>
            <th title="House width">
              <div class="flex">
                <%= icon "home", class: ["size-8"] %>
                <%= icon "move-horizontal" %>
              </div>
            </th>
            <th title="House length">
              <div class="flex">
                <%= icon "home", class: ["size-8"] %>
                <%= icon "move-vertical" %>
              </div>
            </th>
            <th title="Minimum block width">
              <div class="flex">
                <%= icon "rectangle", class: ["size-8"] %>
                <%= icon "move-horizontal" %>
              </div>
            </th>
            <th title="Storeys">
              <div class="flex">
                <%= icon "layer", class: ["size-8"] %>
              </div>
            </th>
            <th title="Bedrooms">
              <div class="flex">
                <%= icon "bed", class: ["size-8"] %>
              </div>
            </th>
            <th title="Bathrooms">
              <div class="flex">
                <%= icon "bath", class: ["size-8"] %>
              </div>
            </th>
            <th title="Living areas">
              <div class="flex">
                <%= icon "tv", class: ["size-8"] %>
              </div>
            </th>
            <th title="Study areas">
              <div class="flex">
                <%= icon "desktop", class: ["size-8"] %>
              </div>
            </th>
            <th></th>
          </tr>
        </thead>
        <% @houses.each do |house| %>
          <%= render house %>
        <% end %>
      </table>
    <% else %>
      <p class="text-center my-10">No houses found.</p>
    <% end %>
  </div>
</div>
